<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kroeg naam"
        android:id="@+id/tv_li_name"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_avatar" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_bar_placeholder"
        android:padding="10dp" />

    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rb_li_rating"
        android:numStars="5"
        android:layout_below="@+id/tv_li_name"
        android:layout_toEndOf="@+id/iv_avatar"
        android:stepSize="0.5"
        android:rating="2.5"
        android:progressTint="#f99d2c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Midden in het oude centrum, achter de Waag, waar de heks ooit tegen de muur is gevlogen, ligt het mooiste speciaal bierencafÃ© van Deventer."
        android:id="@+id/tv_desc_short"
        android:layout_below="@+id/rb_li_rating"
        android:layout_toEndOf="@+id/iv_avatar"
        android:ellipsize="end"
        android:maxLines="3"/>

</RelativeLayout>